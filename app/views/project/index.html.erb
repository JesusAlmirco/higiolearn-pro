<div class="row mt-4">
    <div class="col text-center">
        <h2 class="text-tile">Projects</h2>
    </div>
</div>
<br>

<div class="row row-cols-1 row-cols-md-3" data-turbolinks="false">
    <% @projects.each do |project| %>
        <div class="col mb-4">
            <%= link_to project do %>
                <div class="card" style="height: 8em">
                    <%# if project.image.present? %>
                        <%#= image_tag project.image, class: "card-img-top" %> <!--, wheith: "100", height: "200"-->
                    <%# end %>
                    <div class="card-body">
                        <%= content_tag :h5, project.shortname, class: "card-title", style: "color: #00A699 !important;" %>
                        <h6 class="card-text"><small class="text-muted">Published <%= time_ago_in_words(project.created_at) %> ago. </small></h6> <br/>
                    </div>
                </div>
            <% end %>
        </div>
    <% end %>
</div>

<hr/>
<div data-turbolinks="false">
    <%= render 'shared/footer' %>
</div>