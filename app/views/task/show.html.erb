<!--TASK SHOW-->
<div class="row mt-4" data-turbolinks="false">
    <!--LEFT BUTTON-->
    <div class="col-md-2">
        <div class="card text-center">
            <!--BUTTON MODAL OPEN -->
            <button type="button" class="btn btn-form" data-toggle="modal" data-target="#left_modal">
                <i class="fas fa-list-alt"></i> 
            </button>
        </div>

        <!-- TASK MODAL -->
        <div class="modal left fade" id="left_modal" tabindex="-1" role="dialog" aria-labelledby="left_modal">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <!--MODAL BODY-->
                    <div class="modal-body">
                        <!--MODAL HEADER--->
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true"><i class="fas fa-times"></i></span>
                            </button>
                        </div>
                        <div class="card">
                            <div class="card-body">
                                <% @tasks.each do |task| %>
                                
                                    <% if task.header %>
                                        <!--TASK HEADER-->
                                        <h5 class="card-title"><i class="fas fa-graduation-cap"></i> <%= task.title %></h5>
                                        <p></p>
                                        <!--/TASK HEADER-->
                                    <% else %>
                                        <!--TASK ITEMS-->
                                        <ul class="list-group-flush">
                                            
                                            <%= link_to [task.project, task], class: "list-group-item", style: "color: #00A699 !important;" do %>
                                                <span><%= task.title %></span>
                                                <span class="float-right">
                                                    2:08 &nbsp;
                                                    <i class="fa fa-check-circle fa-lg" aria-hidden="true"></i>
                                                </span>
                                            <% end %>
                                        </ul>
                                        <!--/TASK ITEMS-->
                                    <% end %>
                                
                                <% end %>
                            </div>
                        </div>
                    </div>

                    <!--MODAL FOOTER-->
                    <div class="modal-footer modal-footer-fixed">
                        <button type="button" class="btn btn-normal" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Right Card -->

    <div class="col-md-10">
        <div class="card mb-3 text-center">
            <div class="card-body">
                <%= content_tag :h5, @task.title, class: "card-title" %>
                <div id="wistia_<%= @task.video %>" class="mt-4" style="width: 875px; height: 544px;">
                    <%#= content_tag :iframe, , class: "embed-responsive-item  " %>
                </div>
                <% if !@prev_task.nil? %>
                    <span>
                        <%= link_to 'Previous', [@prev_task.project, @prev_task], class: "btn btn-form mt-5" %>
                    </span>
                <% else %>
                    &nbsp;
                <% end %>
                <% if !@next_task.nil? %>
                    <span>
                        <%= link_to 'Continue', [@next_task.project, @next_task], class: "btn btn-form mt-5" %>
                    </span>
                <% end %>
                <br>
                <br>
                <%= content_tag :p, markdown(@task.note), class: "card-text"%>
            </div>
        </div>
    </div>
</div>


<script charset="ISO-8859-1" src="https://fast.wistia.net/assets/external/E-v1.js"></script>

<script>
    wistiaEmbed = Wistia.embed("<%= @task.video %>"), {
        videoQuanlity: "hd-only",
        videoFoam: true
    }
    function setPlaySpeed(speed) {
        wistiaEmbed.playbackRate(speed);
    }
</script>