<!--TASK SHOW-->
<div class="row mt-4">
    <!--LEFT BUTTON-->
    <div class="col-md-2">
        <div class="card text-center">
            <!--BUTTON MODAL OPEN -->
            <button type="button" class="btn btn-form" data-toggle="modal" data-target="#left_modal">
                <i class="fas fa-list-alt"></i> 
            </button>
        </div>

        <!-- TASK MODAL -->
        <div class="modal left fade" id="left_modal" tabindex="-1" role="dialog" aria-labelledby="left_modal">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <!--MODAL BODY-->
                    <div class="modal-body">
                        <!--MODAL HEADER--->
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true"><i class="fas fa-times"></i></span>
                            </button>
                        </div>
                        <div class="card">
                            <div class="card-body">
                                <% @tasks.each do |task| %>
                                
                                    <% if task.header %>
                                        <!--TASK HEADER-->
                                        <h5 class="card-title"><i class="fas fa-graduation-cap"></i> <%= task.title %></h5>
                                        <p></p>
                                        <!--/TASK HEADER-->
                                    <% else %>
                                        <!--TASK ITEMS-->
                                        <ul class="list-group-flush">
                                            
                                            <%= link_to [task.project, task], class: "list-group-item" do %>
                                                <span><%= task.note %></span>
                                                <span class="float-right">
                                                    2:08 &nbsp;
                                                    <i class="fa fa-check-circle fa-lg" aria-hidden="true"></i>
                                                </span>
                                            <% end %>
                                        </ul>
                                        <!--/TASK ITEMS-->
                                    <% end %>
                                
                                <% end %>
                            </div>
                        </div>
                    </div>

                    <!--MODAL FOOTER-->
                    <div class="modal-footer modal-footer-fixed">
                        <button type="button" class="btn btn-normal" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Right Card -->

    <div class="col-md-10">
        <div class="card mb-3">
            <div class="card-body">
                <%= content_tag :h5, @task.title, class: "card-title text-center" %>
                <div class="embed-responsive embed-responsive-16by9">
                    <%= content_tag :iframe, @task.video, class: "embed-responsive-item" %>
                </div
                <%= content_tag :p, @task.note, class: "card-text" %>
            </div>
        </div>
    </div>
</div>